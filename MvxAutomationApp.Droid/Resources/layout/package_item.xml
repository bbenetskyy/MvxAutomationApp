<?xml version="1.0" encoding="utf-8" ?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:local="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/primary_text"
    android:textSize="@dimen/primary_text_size"
    android:textColor="@color/accentDarkColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    local:MvxBind="Text Barcode"/>

  <TextView
    android:id="@+id/secondary_text"
    android:textSize="@dimen/secondary_text_size"
    android:textColor="@color/accentLightColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    local:layout_constraintTop_toBottomOf="@id/primary_text"
    local:MvxBind="Text ."/>
  <View
    android:id="@+id/line_separator"
    android:layout_width="match_parent"
    android:layout_height="@dimen/separator_height"
    android:background="@color/primaryLightColor"
    local:layout_constraintTop_toBottomOf="@+id/secondary_text"/>

</android.support.constraint.ConstraintLayout>
